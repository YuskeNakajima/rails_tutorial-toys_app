<div class="scaffold-custom-wrap">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <h3 class="mt-1 font-weight:900 f-s-12">Content</h3>
  <% @user.microposts.each do |micropost| %>
    <p>
      (<%= micropost.id %>)
      <%= micropost.content %>
    </p>
  <% end %>

  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</div>